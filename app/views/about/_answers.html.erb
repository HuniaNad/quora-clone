<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card question-card" data-q-id="<%= answer.question.id %>">
                <%= render partial: 'questions/card_header', locals: { entity: answer.question } %>

                <div class="card-body">
                    <h5 class="card-title">
                        <%= link_to answer.question.title.titlecase, answer.question %>
                    </h5>
                    <p class="card-text">
                        <%= truncate(answer.question.body.capitalize, length: 100) %>
                    </p>

                    <%= render partial: 'questions/voting', locals: { entity: answer.question } %>
                    <hr>

                    <div class="card-body"> 
                        <h5 class="text-center"> Your Answer </h5> 
                        <p class="card-text">
                            <%= truncate(answer.body.capitalize, length: 150) %>
                        </p>
                        <%= render partial: 'questions/voting', locals: { entity: answer } %>
                    </div>
                </div>

                <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                    <p>
                        Posted: <%= pakistan_timezone(answer) %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>  