<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card question-card" data-q-id="<%= answer.question.id %>">
                <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex flex-column align-items-center mb-3">

                    <% if answer.question.user&.image&.attached? %>
                    <%= image_tag(answer.question.user.image, style: 'height: 30px; width: 30px; display: inline-block; border-radius: 50%;') %>
                    <% else %>
                    <span class="material-icons md-24 rounded-circle">
                        account_circle
                    </span>
                    <% end %>
                    <%= link_to answer.question.user.name, profile_path(answer.question.user_id) %>
                </div>

                <%= link_to answer.question do %>
                    <i class="material-icons">visibility</i>
                <% end %>
                </div>

                <div class="card-body">
                    <h5 class="card-title">
                        <%= link_to answer.question.title.titlecase, answer.question %>
                    </h5>
                    <p class="card-text">
                        <%= truncate(answer.question.body.capitalize, length: 100) %>
                    </p>

                    <%= render partial: 'questions/voting', locals: { entity: answer.question } %>

                    <div class="card-body">
                        <hr>
                        <p class="card-text">
                            <%= truncate(answer.body.capitalize, length: 150) %>
                        </p>

                        <%= render partial: 'questions/voting', locals: { entity: answer } %>
                    </div>
                </div>

                <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                    <p>
                        Posted: <%= pakistan_timezone(answer) %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>  