<div class="container mt-4">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 offset-md-2 m-0">
      <div class="card">
        <% if followed_topic.image&.attached? %>
          <%= image_tag(followed_topic.image, class: 'card-img-top') %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">
            <%= followed_topic.title.titlecase %>
          </h5>
          <p class="card-text">
            <%= followed_topic.description.capitalize %>
          </p>
        </div>
        <div class="card-footer text-muted">
          <%= render partial: 'topics/following', locals: { topic: followed_topic } %>
        </div>
      </div>   
        
    </div>
  </div>
</div>  