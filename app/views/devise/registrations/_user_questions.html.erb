<div class="container mt-4">
    <div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">

                    <% if answer.question.user&.image&.attached? %>
                    <%= image_tag(answer.question.user.preview('30x30'), class: 'circular-image display-image' ) %>
                    <% else %>
                    <%= icon('fa-solid', 'circle-user fa-2x')%>
                    <% end %>
                    <%= link_to answer.question.user.name, profile_path(answer.question.user_id), class: 'ml-2' %>
                </div>

                <%= link_to answer.question, data: { toggle: "tooltip", placement:"top" }, title: "Open Question" do %>
                    <%= icon('fa-solid', 'up-right-from-square fa-1x')%>
                <% end %>
            </div>
            
            <div class="card-body">
                <h5 class="card-title">
                    <%= answer.question.title.titlecase %>
                </h5>
                <p class="card-text">
                    <%= truncate(answer.question.body.capitalize, length: 140) %>
                </p>
            </div>

            <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                Posted on <%= pakistan_timezone(answer.question) %>
            </div>
        </div>
    </div>
    </div>
</div>  