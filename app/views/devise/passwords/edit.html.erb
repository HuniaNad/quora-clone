<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center font-weight-bold ">Change Password</div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, "New password" %><br />
              <%= f.password_field :password, class: 'form-control', required: true %>
              <% if @minimum_password_length %>
                <small id="passwordHelpBlock" class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm new password", class: 'control-label' %>
              <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "Reset password", class: 'btn btn-primary px-5' %>
            </div>
          <% end %>
          <div class="text-center">
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br /><br />

            <%= link_to "Log in", new_session_path(resource_name) %> | <%= link_to " Sign up", new_registration_path(resource_name) %><br /><br />
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
