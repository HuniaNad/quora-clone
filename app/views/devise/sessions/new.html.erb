<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center font-weight-bold">Login</div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
            <div class="form-group">
              <%= form.label :email, class: 'control-label' %>
              <%= form.email_field :email, class: 'form-control', required: true, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="form-group">
              <%= form.label :password, class: 'control-label' %>
              <%= form.password_field :password, class: 'form-control', required: true %>
            </div>
            <div class="form-group text-center">
              <%= form.submit 'Login', class: 'btn btn-primary px-5' %>
            </div>
          <% end %>
            <div class="text-center">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              Don't have an account?<%= link_to " Sign up", new_registration_path(resource_name) %><br /><br />
              <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


