
<div class="card mt-4">
  <div class="card-header d-flex justify-content-between align-items-center w-100">
    <div class="d-flex align-items-center justify-content-between">
        <% if answer.user&.image&.attached? %>
          <%= image_tag(answer.user.preview, class: 'circular-image display-image' ) %>
        <% else %>
          <%= icon('fa-solid', 'circle-user fa-2x')%>
        <% end %>
        <%= link_to answer.user.name, profile_path(answer.user_id), class: 'ml-2' %>
    </div>

    <% if policy(answer).destroy? %>
      <%= link_to [answer.question, answer], method: :delete, data: { confirm: "Are you sure you want to delete this answer?", toggle: "tooltip", placement:"top" }, title: "Delete" do %>
        <%= icon('fa-solid', 'trash') %>
      <% end %>
    <% end %> 
  </div>

  <div class="card-body">
    <p class="card-text">
        <%= answer.body.capitalize %>
    </p>

    <div class="d-flex justify-content-end align-items-center mt-3 w-100">
      
        <%= render partial: 'questions/voting', locals: { entity: answer } %>

    </div>

  </div>
</div>
  